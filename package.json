{
  "name": "flip",
  "version": "1.0.0",
  "description": "Swedish marketplace flipping platform",
  "scripts": {
    "dev": "npm run dev:preflight && next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "type-check": "tsc --noEmit",
    "test": "echo \"Error: no test specified\" && exit 1",
    "prepare": "husky",
    "dev:preflight": "node scripts/preflight-check.js",
    "task:start": "node scripts/task-starter.js",
    "task:complete": "node scripts/task-completer.js",
    "validate:phase-requirements": "node scripts/validate-phase.js",
    "validate:rate-limits": "node scripts/check-rate-limits.js",
    "test:price-db": "echo \"Price database tests would run here\"",
    "test:security": "echo \"Security tests would run here\"",
    "test:scrapers": "echo \"Scraper tests would run here\"",
    "db:migrate": "echo \"Database migrations would run here\""
  },
  "dependencies": {
    "next": "14.2.15",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@types/node": "^20.16.17",
    "@types/react": "^18.3.16",
    "@types/react-dom": "^18.3.0",
    "@typescript-eslint/eslint-plugin": "^8.41.0",
    "@typescript-eslint/parser": "^8.41.0",
    "autoprefixer": "^10.4.21",
    "eslint": "^8.57.1",
    "eslint-config-next": "14.2.15",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.5",
    "postcss": "^8.4.49",
    "prettier": "^3.6.2",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.6.3"
  },
  "lint-staged": {
    "*.{js,ts,jsx,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,css,scss}": [
      "prettier --write"
    ],
    "*.sql": [
      "sql-formatter --fix"
    ]
  }
}

# ============================================================================
# ENVIRONMENT VARIABLES TEMPLATE - Swedish Marketplace Flipping Platform
# ============================================================================
# Copy this file to .env.local and fill in your actual values
# NEVER commit .env.local to version control
# ============================================================================

# ============================================================================
# ENVIRONMENT
# ============================================================================
NODE_ENV=development

# ============================================================================
# SUPABASE CONFIGURATION (REQUIRED)
# ============================================================================
# Get these values from your Supabase project dashboard
# Project Settings -> API

# Your Supabase project URL
NEXT_PUBLIC_SUPABASE_URL=https://your-project-ref.supabase.co

# Supabase anon/public key (safe for client-side use)
NEXT_PUBLIC_SUPABASE_ANON_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...

# Supabase service role key (KEEP SECRET - server-side only)
SUPABASE_SERVICE_ROLE_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...

# Direct database connection string (for migrations/admin tasks)
DATABASE_URL=postgresql://postgres:your-password@db.your-project-ref.supabase.co:5432/postgres

# ============================================================================
# OAUTH PROVIDERS (Optional - for social login)
# ============================================================================
# Configure these in your Supabase dashboard under Authentication -> Providers
# Set each to 'true' to enable the OAuth provider

# Google OAuth (recommended for user-friendly signup)
NEXT_PUBLIC_SUPABASE_GOOGLE_ENABLED=false

# Facebook OAuth (good for marketplace users)
NEXT_PUBLIC_SUPABASE_FACEBOOK_ENABLED=false

# GitHub OAuth (developer-friendly, development only)
NEXT_PUBLIC_SUPABASE_GITHUB_ENABLED=false

# Apple OAuth (iOS users, production only)
NEXT_PUBLIC_SUPABASE_APPLE_ENABLED=false

# ============================================================================
# DISCORD INTEGRATION (Optional - for notifications)
# ============================================================================
# Create a Discord bot and get these values from Discord Developer Portal

# Discord bot token (if using Discord notifications)
DISCORD_BOT_TOKEN=your_discord_bot_token_here

# Discord webhook URL (for simple notifications)
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/your/webhook/url

# Your Discord server ID (for server-based notifications)
DISCORD_SERVER_ID=your_discord_server_id

# ============================================================================
# EMAIL SERVICE (Development - Optional)
# ============================================================================
# For development, you can use a free email service like Resend

# Email service API key (Resend, SendGrid, etc.)
EMAIL_API_KEY=your_email_api_key

# From email address
EMAIL_FROM=noreply@yourdomain.com

# ============================================================================
# EXTERNAL APIs (Future features)
# ============================================================================

# OpenAI API key (for production AI features - not needed for development)
OPENAI_API_KEY=your_openai_api_key

# Swish payment credentials (production only)
SWISH_MERCHANT_ID=your_swish_merchant_id
SWISH_CERT_PATH=path/to/swish/certificate.pem
SWISH_KEY_PATH=path/to/swish/private.key
SWISH_CA_CERT_PATH=path/to/swish/ca.crt

# ============================================================================
# MONITORING AND ANALYTICS (Optional)
# ============================================================================

# Sentry DSN (for error tracking)
SENTRY_DSN=your_sentry_dsn

# PostHog project key (for analytics)
POSTHOG_PROJECT_KEY=your_posthog_key

# ============================================================================
# DEVELOPMENT SETTINGS
# ============================================================================

# Enable debug logging
DEBUG=true

# Skip certain validations during development
DEV_SKIP_PRICE_DB_CHECK=false

# Mock payment processing in development
DEV_MOCK_PAYMENTS=true

# Enable development features
DEV_MODE_ENABLED=true

# ============================================================================
# SECURITY SETTINGS (Production)
# ============================================================================

# JWT secret for additional security (auto-generated if not provided)
JWT_SECRET=your_long_random_jwt_secret_here

# Session secret for server-side sessions
SESSION_SECRET=your_long_random_session_secret_here

# Encryption key for sensitive data
ENCRYPTION_KEY=your_32_character_encryption_key_here

# ============================================================================
# DOMAIN AND URLs (Production)
# ============================================================================

# Your production domain
NEXT_PUBLIC_APP_URL=https://your-domain.com

# API base URL (usually same as app URL)
NEXT_PUBLIC_API_URL=https://your-domain.com/api

# Auth redirect URLs
NEXT_PUBLIC_AUTH_REDIRECT_URL=https://your-domain.com/auth/callback

# ============================================================================
# RATE LIMITING (Production)
# ============================================================================

# Redis URL for rate limiting (if using Redis)
REDIS_URL=redis://localhost:6379

# Rate limit settings (requests per minute)
RATE_LIMIT_MAX_REQUESTS=60
RATE_LIMIT_WINDOW_MS=60000

# ============================================================================
# PROXY SETTINGS (For scraping)
# ============================================================================

# Proxy service for scraping (development can use free/no proxy)
PROXY_SERVICE_URL=http://your-proxy-service.com
PROXY_USERNAME=your_proxy_username
PROXY_PASSWORD=your_proxy_password

# Rotating proxy pool (comma-separated)
PROXY_POOL=proxy1:port,proxy2:port,proxy3:port

# ============================================================================
# LOGGING AND MONITORING
# ============================================================================

# Log level (error, warn, info, debug)
LOG_LEVEL=info

# Enable structured logging
STRUCTURED_LOGGING=true

# Log file path (optional)
LOG_FILE_PATH=./logs/app.log

# ============================================================================
# FEATURE FLAGS (Development)
# ============================================================================

# Enable specific features during development
FEATURE_DISCORD_NOTIFICATIONS=true
FEATURE_EMAIL_NOTIFICATIONS=false
FEATURE_SMS_NOTIFICATIONS=false
FEATURE_FLIPSQUADS=true
FEATURE_AUTOLISTER=true
FEATURE_PRICE_SETTER=false

# ============================================================================
# NOTES FOR DEVELOPERS
# ============================================================================

# 1. REQUIRED FOR BASIC FUNCTIONALITY:
#    - NEXT_PUBLIC_SUPABASE_URL
#    - NEXT_PUBLIC_SUPABASE_ANON_KEY
#    - SUPABASE_SERVICE_ROLE_KEY
#    - NODE_ENV

# 2. OPTIONAL FOR DEVELOPMENT:
#    - Discord settings (for notification testing)
#    - Email settings (for user emails)
#    - All other settings can use defaults

# 3. SECURITY REMINDERS:
#    - Never commit .env.local to Git
#    - Use different keys for development and production
#    - Rotate keys regularly in production
#    - Keep service role key secret (server-side only)

# 4. GETTING STARTED:
#    1. Copy this file to .env.local
#    2. Create a free Supabase project at supabase.com
#    3. Fill in your Supabase credentials
#    4. Run: npm run db:migrate
#    5. Run: npm run db:seed (for development data)
#    6. Run: npm run dev